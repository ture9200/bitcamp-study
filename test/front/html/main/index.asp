			<%
				Dim position, links, files

				Set rs = Server.createobject("ADODB.RecordSet")
				sql = "select idx, updateday, title, position, links, files from SG_popup order by updateday desc"
				rs.open(sql), db, 1

				if rs.BOF or rs.EOF then

				else

				do while rs.eof = false

				idx = rs("idx")
				title = rs("title")
				position = Split(rs("position"),"/")
				links = rs("links")
				files = rs("files")
				%>
				<div class="main-popup" id="mainPopup<%=idx%>" style="top:<%=position(0)%>px; left:<%=position(1)%>px;">
					<div><a href="<% If links = "" Then %>#<% Else %><%=links%><% End If %>"><img src="/data/popup/<%=files%>" alt="<%=title%>" title="<%=title%>" /></a></div>
					<dl>
						<dt onclick="todaycloseWin<%=idx%>();">오늘 더 이상 열지 않기</dt>
						<dd onclick="closeWin<%=idx%>();">닫기</dd>
					</dl>
				</div>

				<script language="Javascript">
					function setCookie( name, value, expirehours ) {
						var todayDate = new Date();
						todayDate.setHours( todayDate.getHours() + expirehours );
						document.cookie = name + "=" + escape( value ) + "; path=/; expires=" + todayDate.toGMTString() + ";"
					}


					function closeWin<%=idx%>() {
						document.getElementById('mainPopup<%=idx%>').style.display = "none";
					}
					function todaycloseWin<%=idx%>() {
						setCookie( "ncookie<%=idx%>", "done<%=idx%>" , 24 );
						document.getElementById('mainPopup<%=idx%>').style.display = "none";
					}
					cookiedata = document.cookie;
					if ( cookiedata.indexOf("ncookie<%=idx%>=done<%=idx%>") < 0 ){
						document.getElementById('mainPopup<%=idx%>').style.display = "block";
					} else {
						document.getElementById('mainPopup<%=idx%>').style.display = "none";
					}
				</script>
				<%
				rs.MoveNext
				loop

				end if
				rs.close
				set rs=Nothing
				db.close
				set db=Nothing
			%>
